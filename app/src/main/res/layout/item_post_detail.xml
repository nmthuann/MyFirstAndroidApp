<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_jobPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/image_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_titleJobPost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit video game"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_like_post"
                app:tint="@color/pink" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_authorJobPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Nguyen Van A" />

        <TextView
            android:id="@+id/tv_priceJobPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="From $50" />

        <TextView
            android:id="@+id/tv_descriptionJobPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nội dung mô tả" />

    </LinearLayout>
</androidx.cardview.widget.CardView>